$max-width = 1100px
$accent-color = #E21B57
$primary-color = #007EA7

html
  scroll-behavior: smooth
body
  background: $primary-color
  display: grid 
  grid-auto-columns: 100%
  justify-content: center 
  align-items: center
  margin: 0
  padding: 0
  min-height: 100vh
  min-width: 320px
  width: 100%

*
  font-family: 'Montserrat', sans-serif
  box-sizing: border-box 

a
  text-decoration: none

h1 
  text-align: center
  max-width: $max-width
  justify-self: center
  width: 100%
  color: white
  margin-top: 35px
  margin-bottom: 35px
  padding: 0 10px

form
  padding: 0 20px 40px 20px
  justify-self: center
  align-self: center
  display: flex
  justify-content: center
  width: 100%
  max-width: $max-width
  input
    padding: 7px 10px
    font-size: 16px
    border: none
  [type="text"]
    box-shadow: 0px -3px 0px 0px $accent-color
    width: 50%
  [type="submit"]
    background-color: black
    cursor: pointer
    color: white
    box-shadow: 3px 3px 0px 0px $accent-color
    transition: 0.2s
    &:hover
      background-color: white
      color: black


.articles
  display: grid
  justify-self: center
  grid-template-columns: 1fr 1fr
  grid-gap: 20px
  margin: 20px
  max-width: $max-width
  @media screen and (max-width: 800px)
    grid-template-columns: 1fr

article 
  background: white
  padding: 20px
  display: grid
  grid-gap: 20px
  box-shadow: 0px -3px 0px 0px $accent-color
  h3
    margin: 0
    font-size: 22px;
  a
    display: block
    width: fit-content
    justify-self: center
    align-self: end
    background-color: black
    color: white
    padding: 7px 10px
    height: fit-content
    box-shadow: 3px 3px 0px 0px $accent-color
    transition: 0.2s
    &:hover
      background-color: $primary-color

  div
    display: flex
    justify-content: space-between
  span 
    display: block  
    align-self: end
  time
    display: flex
    flex-direction: column
    @media screen and (max-width: 800px)
      font-size: 15px

.number-page
  max-width: $max-width
  justify-self: center
  padding: 10px
  span 
    color: white

.pagination
  display: flex
  margin: 20px 10px 0 10px
  align-items: center 
  justify-content: center
  span
    color: white
    margin: 0 5px
  button
    border: none
    background-color: white
    margin: 0 4px
    min-width: 24px
    transition: 0.2s
    font-size: 17px
    padding: 6px
    box-shadow: 0px -3px 0px 0px $accent-color
    cursor: pointer
    &:hover
      background-color: $accent-color
      color: white
  .active
    background-color: $accent-color
    color: white
  .hidden
    display: none

footer 
  text-align: center
  background-color: white
  color: black
  display: flex
  align-self: end
  align-items: center
  justify-content: center
  width: 100%
  padding: 15px 10px
  margin-top: 40px
  box-shadow: 0px -3px 0px 0px $accent-color
  a
   color: black
   &:hover
    color: $primary-color

.hidden
  display: none
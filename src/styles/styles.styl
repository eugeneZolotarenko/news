body
  background #007EA7
  display: grid 
  justify-content: center 
  align-items: center
  margin: 0
  padding: 0
  min-height: 100vh
  width: 100%

*
  font-family: 'Montserrat', sans-serif;
  box-sizing border-box 

form
  padding: 40px;
  justify-self: center
  align-self: center
  input
    padding: 7px 10px
    font-size: 16px
    border: none
  [type="text"]
    box-shadow: 0px -3px 0px 0px #E21B57
  [type="submit"]
    background-color: black
    color: white
    box-shadow: 3px 3px 0px 0px #E21B57
    transition: 0.2s
    &:hover
      background-color: white
      color: black


.articles
  display: grid
  grid-template-columns: 1fr 1fr
  grid-gap: 20px
  margin: 20px
  max-width: 1100px
  @media screen and (max-width: 600px)
    grid-template-columns: 1fr

article 
  background: white
  padding: 20px
  display: grid
  grid-gap: 20px
  box-shadow: 0px -3px 0px 0px #E21B57
  h3
    margin: 0
    font-size: 22px;
  a
    display: block
    width: fit-content
    justify-self: center
    align-self: end
    background-color: black
    color: white
    padding: 7px 10px
    height: fit-content
    text-decoration: none
    box-shadow: 3px 3px 0px 0px #E21B57
    &:hover
      background-color: #007EA7

  div
    display: flex
    justify-content: space-between
  span 
    display: block  
    align-self: end
  time
    display: flex
    flex-direction: column

.pagination
  display: flex
  align-items: center 
  justify-content: center
  span
    color: white
  button
    border: none
    background-color: white
    margin: 2px
